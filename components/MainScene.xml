<?xml version = "1.0" encoding = "utf-8" ?>

<component name = "MainScene" extends = "Scene" initialFocus = "RowList">

    <interface>
        <field id="selectedContent" type="assocarray" />
        <field id="action" type="string" />
        <function name="ShowPurchaseStatus" />
    </interface>

  <script type="text/brightscript" uri="Scripts/MainScene/MainScene.brs" />
  <script type="text/brightscript" uri="Scripts/MainScene/KeyEvents.brs" />
  <script type="text/brightscript" uri="Scripts/MainScene/VideoController.brs" />
  <script type="text/brightscript" uri="Scripts/MainScene/ShowPurchaseStatus.brs" />
  <script type="text/brightscript" uri="Scripts/MainScene/MakePurchase.brs" />


  <children >
    <Poster 
        id = "bgPoster"
    />

    <Video
        id = "video"
        visible = "false" 
    />

    <Poster 
        id = "fgPoster"
        uri = "pkg:/images/Mask.png"
    />

    <Rectangle 
        id = "infoRectangle" 
        color = "#10101F00">

      <Label 
          id = "titleLabel" 
          translation = "[ 15, 15 ]" 
          wrap = "true" 
          font = "font:MediumBoldSystemFont" 
      />

      <Poster 
          id = "hdrPoster" 
          width = "40" 
          height = "20" 
          translation = "[ 15, 62 ]" 
          uri = "pkg:/images/HDR.png" 
      />
      <Label 
          id = "dateLabel" 
          translation = "[ 70, 60 ]" 
          width = "260" 
          height = "30" 
          wrap = "true" 
          text = "dsfds"
          font = "font:MediumBoldSystemFont" 
      />
      <Rectangle 
          id = "divRectangle" 
          translation = "[ 150, 60 ]" 
          width = "2" 
          height = "25" 
          color = "#FFFFFFFF"/>
      <Label
          id = "durationLabel" 
          translation = "[ 160, 60 ]" 
          width = "200" 
          height = "30" 
          wrap = "true" 
          text = "234"
          font = "font:MediumBoldSystemFont" 
      />

      <Label 
          id = "infoLabel" 
          translation = "[ 15, 90 ]" 
          wrap = "true" 
          ellipsizeOnBoundary = "true"
          font = "font:MediumBoldSystemFont"
      />
    </Rectangle>


    <Rectangle 
        id = "purchaseRectangle" 
        width = "400" 
        height = "100" 
        color = "#10101F00">

        <MarkupList 
            id = "subscribeMarkupList" 
            itemComponentName = "SubscribeListItem" 
            itemSize = "[ 400, 100 ]" 
            itemSpacing = "[ 0, 0 ]" 
            drawFocusFeedback = "false" 
            vertFocusAnimationStyle = "floatingFocus" 
        />

        <Animation 
            id = "purchaseButtonAnimation" 
            duration = "0.5" 
            easeFunction = "inOutQuad" >

            <Vector2DFieldInterpolator 
                key = "[ 0.0, 1.0 ]" 
                keyValue = "[ [0, 0], [500, 500] ]" 
                fieldToInterp = "purchaseRectangle.translation" />

          </Animation>
    </Rectangle>



    <Poster 
        id = "logoPoster" 
        width = "120" 
        height = "40" 
        uri = "pkg:/images/Logo.png" 
    />
    <Poster 
        id = "arrowPoster" 
        width = "35" 
        height = "20" 
        uri = "pkg:/images/Arrow.png" 
    />


    <RowList 
        id = "RowList" 
        itemComponentName = "RowListItem" 
        numRows = "2" 
        itemSize = "[ 1408, 270 ]" 
        rowItemSize = "[ [350, 200] ]" 
        itemSpacing = "[ 0, 0 ]" 
        rowItemSpacing = "[[ 20, 0 ]]" 
        showRowLabel = "[ true ]" 
        rowLabelOffset = "[[ 0, 20 ]]"
        drawFocusFeedback = "true" 
        vertFocusAnimationStyle = "fixedFocusWrap" 
        rowFocusAnimationStyle = "fixedFocusWrap" 
    />

    <Rectangle 
        id = "fgRectangle" 
        color = "#10101FCC"
        visible = "false" 
    />

    <Label 
        id = "loadingLabel" 
        width = "400"
        height = "100" 
        horizAlign = "center"
        vertAlign = "center"
        font = "font:MediumBoldSystemFont" 
        text = "Loading..."
    />

    <Timer 
        id = "timerToPlayVideo" 
        repeat = "false" 
        duration = "1" 
    />
  </children>

</component>
